<script>
        // Переменные для каждого счетчика
        let counter1 = 1;
        let counter2 = 1;
        let counter3 = 1;
        let counter4 = 1;

        const pricePerItem = 25; // Цена за один товар

        // Функция обновления отображаемого значения и общей стоимости
        function updateDisplay(id) {
            const counter = document.getElementById(id);
            const total = document.getElementById('total' + id.replace('counter', ''));
            switch(id) {
                case 'counter1':
                    counter.innerText = counter1;
                    total.innerText = (counter1 * pricePerItem) + ' грн.';
                    break;
                case 'counter2':
                    counter.innerText = counter2;
                    total.innerText = (counter2 * pricePerItem) + ' грн.';
                    break;
                case 'counter3':
                    counter.innerText = counter3;
                    total.innerText = (counter3 * pricePerItem) + ' грн.';
                    break;
                case 'counter4':
                    counter.innerText = counter4;
                    total.innerText = (counter4 * pricePerItem) + ' грн.';
                    break;
            }
        }

        // Функция увеличения значения
        function increment(id) {
            switch(id) {
                case 'counter1':
                    counter1++;
                    break;
                case 'counter2':
                    counter2++;
                    break;
                case 'counter3':
                    counter3++;
                    break;
                case 'counter4':
                    counter4++;
                    break;
            }
            updateDisplay(id);
        }

        // Функция уменьшения значения
        function decrement(id) {
            switch(id) {
                case 'counter1':
                    if (counter1 > 0) counter1--;
                    break;
                case 'counter2':
                    if (counter2 > 0) counter2--;
                    break;
                case 'counter3':
                    if (counter3 > 0) counter3--;
                    break;
                case 'counter4':
                    if (counter4 > 0) counter4--;
                    break;
            }
            updateDisplay(id);
        }

        // Инициализация отображаемого значения при загрузке страницы
        document.addEventListener('DOMContentLoaded', function() {
            updateDisplay('counter1');
            updateDisplay('counter2');
            updateDisplay('counter3');
            updateDisplay('counter4');
        });
    </script>