<section class="password">
    <div class="login__wrapper">
        <h2 class="login__title auth-title">Пароль</h2>

        <form>
            <div class="registration__form-group form-group">
                <input type="current-password" id="current-password" name="current-password" placeholder="Текущий пароль*" required>
            </div>
            <div class="registration__form-group form-group">
                <input type="new-password" id="new-password" name="new-password" placeholder="Новый пароль*" required>
            </div>

            <div class="registration__form-group form-group">
                <input type="ag-password" id="ag-password" name="ag-password" placeholder="Подтвердить пароль*" required>
            </div>

            <button type="submit" class="registration__submit-button main--btn">Продолжить</button>



        </form>


    </div>
</section>